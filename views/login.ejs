<html lang="en">
	<head>
		<%- include('layouts/document-head') %>
	</head>
	<body class="bg-gray-200">
		<%- include('layouts/header') %>
		<div class="mx-auto flex items-center justify-center max-w-md">
			<div class="flex flex-col items-stretch w-screen">
				<div class="mb-4 text-center">Welcome Back!</div>
				<div class="mb-8">
					<form action="/login" method="post">
						<% if (info) { %> <p class="mb-4 text-center text-xs font-bold text-gray-600"><%= info %></p> <% } %>
						<input type="text" name="username" placeholder="Username" autocomplete="off" autofocus class="mb-4 px-4 py-2 w-full bg-white rounded-full text-sm focus:outline-none focus:shadow-lg hover:shadow-lg">
						<input type="password" name="password" placeholder="Password" class="mb-4 px-4 py-2 w-full bg-white rounded-full text-sm focus:outline-none focus:shadow-lg hover:shadow-lg">
						<button class="mb-4 px-4 py-2 w-full bg-sky-500 rounded-full text-sm focus:outline-none focus:shadow-lg hover:shadow-lg text-white font-bold uppercase">Login</button>
						<a href="/register" role="button" class="block mb-4 px-4 py-2 w-full bg-gray-400 rounded-full text-sm text-center focus:outline-none focus:shadow-lg hover:shadow-lg text-white font-bold uppercase">Register</a>
					</form>
				</div>
			</div>
		</div>
	</body>
</html>
